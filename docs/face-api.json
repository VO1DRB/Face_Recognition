{
  "openapi": "3.0.0",
  "info": {
    "title": "Face API",
    "version": "1.0.0",
    "description": "API for managing user faces"
  },
  "servers": [
    { "url": "http://localhost:8000" }
  ],
  "paths": {
    "/api/users/{id}/faces": {
      "get": {
        "summary": "Get faces of a user",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "List of user's faces",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Face" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a new face for user",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/FaceCreate" }
            }
          }
        },
        "responses": {
          "201": { "description": "Face added successfully" }
        }
      }
    },
    "/api/faces/{face_id}": {
      "delete": {
        "summary": "Delete a face",
        "parameters": [
          { "name": "face_id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Face deleted successfully" },
          "404": { "description": "Face not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Face": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "face_encoding": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "FaceCreate": {
        "type": "object",
        "required": ["face_encoding"],
        "properties": {
          "face_encoding": { "type": "string" }
        }
      }
    }
  }
}
