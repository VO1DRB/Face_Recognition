{
  "openapi": "3.0.0",
  "info": {
    "title": "Device API",
    "version": "1.0.0",
    "description": "API for managing IoT devices"
  },
  "servers": [
    { "url": "http://localhost:8000" }
  ],
  "paths": {
    "/api/devices": {
      "get": {
        "summary": "Get all devices",
        "responses": {
          "200": {
            "description": "List of devices",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Device" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Register a new device",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/DeviceCreate" }
            }
          }
        },
        "responses": {
          "201": { "description": "Device registered successfully" }
        }
      }
    },
    "/api/devices/{id}": {
      "get": {
        "summary": "Get device by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Device detail",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Device" }
              }
            }
          },
          "404": { "description": "Device not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Device": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "device_code": { "type": "string" },
          "nama_device": { "type": "string" },
          "lokasi": { "type": "string" },
          "ip_address": { "type": "string" },
          "status": { "type": "string", "enum": ["aktif", "nonaktif"] },
          "last_seen": { "type": "string", "format": "date-time" }
        }
      },
      "DeviceCreate": {
        "type": "object",
        "required": ["device_code", "nama_device", "lokasi"],
        "properties": {
          "device_code": { "type": "string" },
          "nama_device": { "type": "string" },
          "lokasi": { "type": "string" },
          "ip_address": { "type": "string" }
        }
      }
    }
  }
}
